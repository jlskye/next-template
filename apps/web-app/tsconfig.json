{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "module": "esnext",
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@generated/*": [
        "@generated/*"
      ],
      "ui-components/*": [
        "./node_modules/ui-components/dist/*"
      ],
    },
    "types": [
      "vitest/globals"
    ],
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public"
  ]
}
